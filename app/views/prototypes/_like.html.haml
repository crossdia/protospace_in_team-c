- if user_signed_in?
  - if current_user.likes.find_by(prototype_id: prototype.id)
    = button_to({controller: :likes, action: :destroy, prototype_id: @prototype.id}, method: :delete) do
      = image_tag("icon_red_heart.svg", size: "16x16")
      LIKE
      %span.num
        = prototype.likes.count
  - else
    = button_to( controller: :likes, action: :create, prototype_id: @prototype.id) do
      = image_tag("icon_heart.svg", size: "16x16")
      LIKE
      %span.num
        = prototype.likes.count
